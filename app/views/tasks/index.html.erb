<h1> My Tasks </h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == true %>
      <li><input type="checkbox" checked><%= link_to task.title, task_path(task) %></li>
    <% else %>
      <li><input type="checkbox"><%= link_to task.title, task_path(task) %></li>
    <% end %>
    <%= link_to  "Delete a Task", destroy_task_path(task), method: :delete, data: {confirm: "Are you sure!"} %>
  <% end %>
</ul>

<%= link_to  "Create new task", tasks_new_path %>
